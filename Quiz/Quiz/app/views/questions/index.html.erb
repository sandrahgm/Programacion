<h1>Lista de Preguntas</h1>
<p>Total: <%= @questions.size %></p>
<p><%= link_to 'Nueva Pregunta', new_question_path %></p>
<table class="header-table">
  <tr>
    <th>Pregunta</th>
    <th>Opciones</th>
    <th colspan="3">Opciones</th>
  </tr>
  <% @questions.each do |question| %>
  <tr>
    <td><%= question.text %></td>
    <td>
      <ul>
        <% question.choices.each do|choice| %>
        <li>
          <%= choice.text %>
          <% if choice.correct==1 %>(Correct)<% end %>
        </li>
            <% end %>
      </ul>
    </td>
    <td><%= link_to 'Show', question , :class => 'btn btn-info' %></td>
    <td><%= link_to 'Edit', edit_question_path(question), :class => 'btn btn-warning' %></td>
    <td><%= link_to 'Destroy', question, :confirm => 'Esta Seguro?', :method => :delete, :class => 'btn btn-danger'  %></td>
  </tr>
      <% end %>
  </table>
<% content_for( :title) do %>
All Questions
<% end %>

<%= link_to 'Realizar Quiz', quiz_index_url, :class => 'btn tbn-primary'%>

